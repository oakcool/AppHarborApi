                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image HorizontalAlignment="Center" Height="75" VerticalAlignment="Center" Width="75" Source="ms-appx:///Assets/Collaborator.png"/>
                        <TextBlock Grid.Column="1" Margin="15,0,0,0" Style="{StaticResource GroupHeaderTextStyle}" HorizontalAlignment="Left" Text="Collaborators" VerticalAlignment="Center"/>
                    </Grid>
                    <StackPanel  Grid.Row="1" >
                        <Border BorderBrush="{StaticResource DarkBlueColorTransparent}" BorderThickness="0.5" />
                        <Border BorderBrush="{StaticResource BlueColorTransparent}" BorderThickness="1" />
                    </StackPanel>
                    <ListView Margin="15,0,0,0" ItemsSource="{Binding Collaborators}" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel >
                                    <Border BorderBrush="{StaticResource DarkBlueColorTransparent}" HorizontalAlignment="Stretch" BorderThickness="0,0,0,1">
                                        <Border BorderBrush="{StaticResource BlueColorTransparent}" HorizontalAlignment="Stretch" BorderThickness="0,0,0,1">
