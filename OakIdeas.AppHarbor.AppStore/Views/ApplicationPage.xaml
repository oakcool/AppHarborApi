                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="User" TextWrapping="Wrap" Margin="12,0,12,0" Style="{StaticResource ItemTextStyle}" TextAlignment="Left" FontSize="15" />
