                        <TextBlock Grid.Column="1" Margin="15,0,0,0" Style="{StaticResource GroupHeaderTextStyle}" HorizontalAlignment="Left" Text="Configuration Variables" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <StackPanel  Grid.Row="1" >
                        <Border BorderBrush="{StaticResource DarkBlueColorTransparent}" BorderThickness="0.5" />
                        <Border BorderBrush="{StaticResource BlueColorTransparent}" BorderThickness="1" />
                    </StackPanel>
                    <ListView Margin="15,0,0,0" ItemsSource="{Binding ConfigurationVariables}" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel >
                                    <Border BorderBrush="{StaticResource DarkBlueColorTransparent}" HorizontalAlignment="Stretch" BorderThickness="0,0,0,1">
                                        <Border BorderBrush="{StaticResource BlueColorTransparent}" HorizontalAlignment="Stretch" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <StackPanel Margin="0,0,0,17" Width="425" Height="100">
                                                    <Grid Margin="0,0,0,4" IsHitTestVisible="False">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="Key" TextWrapping="Wrap" Margin="12,0,12,0" Style="{StaticResource ItemTextStyle}" TextAlignment="Left" FontSize="15" />
                                                        <TextBlock Text="{Binding Key}" TextWrapping="Wrap" Margin="12,0,12,0" Style="{StaticResource ItemTextStyle}" Grid.Column="1" FontSize="15"/>
                                                        <TextBlock Text="Value" TextWrapping="Wrap" Margin="12,0,12,0" Style="{StaticResource ItemTextStyle}" Grid.Row="1" TextAlignment="Left" FontSize="15"/>
                                                        <TextBlock Text="{Binding Value}" TextWrapping="Wrap" Margin="12,0,12,0" Style="{StaticResource ItemTextStyle}" Grid.Column="1" Grid.Row="1" FontSize="15"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
